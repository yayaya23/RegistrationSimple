@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-10">
            <input id="txtMail" class="form-control" placeholder="Email" maxlength="100" value="@ViewBag.Email" disabled />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <button type="button" class="form-control btn btn-primary" onclick="Login()">Login</button>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script src="~/Scripts/LoginScript.js"></script>