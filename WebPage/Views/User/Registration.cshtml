@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>

<div class="row">
    <div id="divParent" class="form-horizontal">
        <div id="alertWarning" class="alert alert-warning alert-dismissable" style="display:none">
            <button type="button" class="close" onclick="closeAlert()">&times;</button>
            <h4>Please Fill Required Field(s)!</h4>
            <div id="errList"></div>
            @*<ul>
                    <li ng-repeat="item in ErrorList">{{item}}</li>
                </ul>*@
        </div>
        <div class="form-group">
            <div class="col-md-1">
                <input id="txtCC" disabled value="+62" class="form-control" />
            </div>
            <div class="col-md-5">
                <input id="txtPhone" class="form-control" placeholder="Mobile Number" onkeypress="ValidateNumberOnly()" maxlength="15" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input id="txtFName" class="form-control" placeholder="First Name" maxlength="25" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input id="txtLName" class="form-control" placeholder="Last Name" maxlength="25" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Date of Birth</label>
                <input type="date" id="txtDOB" class="form-control" value="now" min="1900-01-01" max="3000-12-31" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="radio">
                    <input type="radio" id="1" name="drone" value="1">
                    <label for="huey">Male</label>
                </div>
                <div class="radio">
                    <input type="radio" id="female" name="drone" value="0">
                    <label for="huey">Female</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input id="txtMail" class="form-control" placeholder="Email" maxlength="100" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <button type="button" class="form-control btn btn-primary" onclick="submitForm()">Register</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div id="divLogin" class="form-horizontal" style="display:none">
        <div class="form-group">
            <div class="col-md-3">
                <button type="button" class="form-control btn btn-success" onclick="login()">Login</button>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <script src="~/Scripts/UserScript.js"></script>
